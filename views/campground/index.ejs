<%include ../partials/header %>

<div class="container">
	<div class="jumbotron" style="padding-top: 10%">
		<div class="container">
			<h1>Welcome To YelpCamp<i class="fas fa-bus-alt"></i> </h1>
            <p>
        	   Your Dream Campground is here  
            </p>
            <p>
              <a class="btn btn-dark btn-large" href="/campgrounds/new">Add New Campgrounds</a>
            </p>
		</div>
    </div>
    
    <div  class="row">
    	<div class=" col-12">
    		<em><h3>Our Most Popular Campgrounds:</h3></em>
    		<p></p>
    	</div>
	</div>

	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
	    <% campground.forEach(function(camp){ %>
           <div class=" col-md-4 col-12">
    	       <div class="img-thumbnail border border-dark ">
	                 <img src="<%= camp.image %>" > 
    		         <div class="caption">
    			         <caption><%= camp.name %></caption>
    		        </div>
    		        <p>
                     <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>      
                    </p>
    		    </div> 
             </div>
        <% }) %>
    </div>
    <div class="container">
         <a class="btn btn-sm btn-dark" href="/">Back </a>
    </div>
   

</div>

<% include ../partials/footer %>

