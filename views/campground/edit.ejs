<%include ../partials/header %>

<div class="container" style="padding-top: 10%;text-align: center; " >
<h1 > Edit <%=campground.name%> !!</h1>
<div style="width:30%; margin: 0 auto; padding-top: 2%">
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
	    <div class="form-group">
	        <input class="form-control" type="text" name="camp[name]" placeholder="Name" value="<%=campground.name%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="camp[price]" placeholder="Pice/Night" value="<%=campground.price%>">
        </div>
        <div class="form-group">
    	    <input class="form-control" type="text" name="camp[image]" placeholder="image Url" value="<%=campground.image%>">
        </div>
        <div class="form-group">
    	    <input class="form-control" type="text" name="camp[desc]" placeholder="Description" value="<%=campground.description%>">
        </div>
	    <div class="form-group">
		    <button class="btn btn-lg btn-primary btn-block">Submit</button>
	    </div>
    </form>
</div>
 <a href="/campgrounds">Go Back !!</a>
</div>



<% include ../partials/footer %>